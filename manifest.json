{
  "manifest_version": 3,
  "name": "ToolScout - Price Comparison Assistant",
  "version": "2.0.0",
  "description": "Compare tool prices across Amazon, Home Depot, Leroy Merlin, and eBay. Track prices and get alerts.",
  
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.uk/*",
    "*://*.homedepot.com/*",
    "*://*.homedepot.ca/*",
    "*://*.leroymerlin.fr/*",
    "*://*.ebay.com/*",
    "*://*.ebay.ca/*",
    "*://*.ebay.co.uk/*",
    "*://svcs.ebay.com/*",
    "*://api.ebay.com/*",
    "*://open.api.ebay.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "ToolScout - Compare Tool Prices"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.co.uk/*",
        "*://*.homedepot.com/*",
        "*://*.homedepot.ca/*",
        "*://*.leroymerlin.fr/*",
        "*://*.ebay.com/*",
        "*://*.ebay.ca/*",
        "*://*.ebay.co.uk/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "19": "icons/icon-19.png",
    "32": "icons/icon-32.png",
    "38": "icons/icon-38.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "author": "ToolScout Team",
  "homepage_url": "https://github.com/yourusername/toolscout",
  "short_name": "ToolScout",
  
  "offline_enabled": false,
  
  "incognito": "spanning",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}