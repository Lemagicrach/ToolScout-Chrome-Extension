{
  "manifest_version": 3,
  "name": "ToolScout Pro - Smart Tool Price Tracker",
  "version": "2.2.1",
  "description": "Track and compare tool prices across Amazon, Home Depot, Leroy Merlin, and eBay with smart alerts.",
  
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.es/*",
    "https://*.amazon.it/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.in/*",
    "https://*.homedepot.com/*",
    "https://*.homedepot.ca/*",
    "https://*.leroymerlin.fr/*",
    "https://*.ebay.com/*",
    "https://*.ebay.ca/*",
    "https://*.ebay.co.uk/*",
    "https://*.ebay.fr/*",
    "https://*.ebay.de/*",
    "https://svcs.ebay.com/*"
  ],
  "offline_enabled": false,
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "ToolScout Pro - Click to compare prices"
  },
  
  "options_page": "options.html",
  
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.es/*",
        "https://*.amazon.it/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.in/*",
        "https://*.homedepot.com/*",
        "https://*.homedepot.ca/*",
        "https://*.leroymerlin.fr/*",
        "https://*.ebay.com/*",
        "https://*.ebay.ca/*",
        "https://*.ebay.co.uk/*",
        "https://*.ebay.fr/*",
        "https://*.ebay.de/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "dashboard.html",
        "disclosure.html",
        "privacy_policy.html"
      ],
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.homedepot.com/*",
        "https://*.homedepot.ca/*",
        "https://*.leroymerlin.fr/*",
        "https://*.ebay.com/*",
        "https://*.ebay.ca/*",
        "https://*.ebay.co.uk/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  
  "minimum_chrome_version": "116",
  
  "author": "ToolScout Team",
  "homepage_url": "https://github.com/yourusername/toolscout-extension"
}